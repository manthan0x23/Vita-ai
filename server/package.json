{
  "name": "server",
  "version": "1.0.0",
  "description": "Express + TypeScript backend",
  "main": "dist/app.js",
  "scripts": {
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node src/app.ts'",
    "build": "rimraf dist && tsc",
    "start": "node dist/app.js",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "vitest",

    "db:generate": "drizzle-kit generate",
    "db:migrate": "ts-node src/db/migrate.ts",
    "db:up": "docker compose -f src/db/postgres/docker-compose.yml up -d",
    "db:down": "docker compose -f src/db/postgres/docker-compose.yml down && rm -rf src/db/postgres/postgres-data"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.17.1",
  "dependencies": {
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.5",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "nanoid": "^5.1.6",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/morgan": "^1.9.10",
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.14.0",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  }
}
